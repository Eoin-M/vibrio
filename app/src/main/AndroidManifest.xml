<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.eoinmaguire.vibrio">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.Blue">
        <activity android:name=".Main">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Levels"
            android:label="@string/title_activity_levels"
            android:parentActivityName=".Main"
            android:theme="@style/AppTheme.Blue.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.eoinmaguire.vibrio.Main" />
        </activity>
        <activity android:name=".Level1"></activity>
        <activity android:name=".Level2"></activity>
        <activity android:name=".Level3"></activity>
    </application>

</manifest>
